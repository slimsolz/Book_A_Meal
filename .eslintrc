{
	"env": {
		"es6": true,
		"browser": true,
		"mocha": true,
		"node": true
	},
	"extends": "airbnb",
	"rules": {
		"no-console": 0,
		"no-unused-vars": [1, { "argsIgnorePattern": "res|next|^err" }],
		"comma-dangle": 0,
		"import/no-unresolved": "off",
    "import/extensions": "off"
	},
	"parseOptions": {
		"ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
    },
}